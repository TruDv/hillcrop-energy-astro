---
// src/pages/services.astro - MODIFIED FOR THE 7 NEW SERVICES

import MainLayout from '../layouts/MainLayout.astro';
import ServiceCard from '../components/ServiceCard.astro'; 

const pageTitle = "Our Services";
const pageDescription = "Hillcrop Energy provides a full spectrum of specialized services, ensuring quality, safety, and operational excellence across all energy sectors.";

// Data for the 7 definitive service cards, now including image paths
const servicesData = [
    {
        title: "Marine Logistics",
        description: "Reliable and integrated logistics solutions for marine operations, including transport, supply chain management, and vessel coordination.",
        url: "/services/marine-logistics",
        image: "/images/service-marine.png" // Added image path
    },
    {
        title: "Technical Tools Procurement",
        description: "Sourcing and delivery of certified, high-performance drilling, completion, and intervention tools tailored to project specifications.",
        url: "services/technical-tools-procurement",
        image: "/images/service-tools.jpg" // Added image path
    },
    {
        title: "Safety Materials Supply",
        description: "Provision of certified Personal Protective Equipment (PPE), safety systems, and essential materials to maintain a safe working environment.",
        url: "/services/safety-materials-supply",
        image: "/images/service-safety.png" // Added image path
    },
    {
        title: "International Procurement",
        description: "Global sourcing, quality control, and streamlined logistics for large-scale materials, ensuring timely project delivery worldwide.",
        url: "/services/international-procurement",
        image: "/images/service-procurement.png" // Added image path
    },
    {
        title: "Onshore / Support",
        description: "Comprehensive support for all onshore operations, including facility maintenance, general field support, and manpower provision.",
        url: "/services/onshore-support",
        image: "/images/service-onshore.png" // Added image path
    },
    {
        title: "Marine Tools/Equipment Support",
        description: "Leasing, maintenance, and technical assistance for all specialized tools and heavy equipment used in offshore and marine environments.",
        url: "/services/marine-tools-equipment-support",
        image: "/images/service-marine-tools.png" // Added image path
    },
    {
        title: "General Contracts",
        description: "Flexible and comprehensive contract services covering various project needs, including manpower, consulting, and specialized short-term requirements.",
        url: "/services/general-contracts",
        image: "/images/General-Contracts.jpg" // Added image path
    },
];
---

<MainLayout title={pageTitle} description={pageDescription}>
    
    <section class="bg-charcoal py-24 text-white">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-5xl font-extrabold mb-3">{pageTitle}</h1>
            <p class="text-xl text-gray-300 max-w-4xl mx-auto">{pageDescription}</p>
        </div>
    </section>

    <section class="py-32 bg-gray-50">
        <div class="container mx-auto px-6">
            
            {/* <h2 class="text-4xl font-extrabold text-gray-900 text-center mb-16">Seven Pillars of Excellence</h2> */}

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 items-stretch">
                {servicesData.map((service) => (
                    <ServiceCard service={service} />
                ))}
            </div>

            <div class="mt-32 text-center p-12 bg-white shadow-2xl rounded-xl border-t-8 border-hillcrop-green max-w-5xl mx-auto">
                <h3 class="text-3xl font-bold text-gray-900 mb-4">Ready to Begin Your Project?</h3>
                <p class="text-xl text-gray-700 mb-6">
                    Partner with us for safe, quality-driven, and reliable energy services worldwide.
                </p>
                <a href="/contact" class="inline-block px-10 py-4 bg-hillcrop-green text-white text-lg font-semibold rounded-full shadow-lg hover:bg-hillcrop-green-dark transition duration-300">Contact Our Experts &rarr;</a>
            </div>

        </div>
    </section>

</MainLayout>
