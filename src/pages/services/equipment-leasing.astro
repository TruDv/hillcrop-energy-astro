import MainLayout from '../../layouts/MainLayout.astro';
import DetailSection from '../../components/DetailSection.astro';

const serviceData = {
    title: "Technical Equipment Supply & Leasing",
    description: "Hillcrop provides certified, high-quality industrial equipment and managing logistics critical for oilfield, marine, and construction operations globally.",

    // IMAGE DATA: (Update this path)
    imageUrl: "/images/equipment_supply.jpg", 
    imageAlt: "A warehouse full of large, specialized industrial equipment ready for transport.",
    // ---

    content: `
        <p>We ensure seamless project execution by providing the highest quality, certified machinery and a reliable global logistics chain.</p>
        <ul class="space-y-3">
            <li><strong>Heavy Machinery:</strong> Supply and leasing of construction equipment including cranes, excavators, forklifts, and transportation vehicles.</li>
            <li><strong>Specialized Oilfield Tools:</strong> Providing drilling bits, completion tools, and other essential downhole and surface equipment.</li>
            <li><strong>Safety & PPE:</strong> Supplying certified personal protective equipment and advanced safety monitoring systems.</li>
            <li><strong>Logistics Management:</strong> Comprehensive management of the procurement and delivery chain to remote and demanding locations.</li>
        </ul>
    `,
};
---

<MainLayout title={serviceData.title} description={serviceData.description}>
    <DetailSection data={serviceData} />
</MainLayout>