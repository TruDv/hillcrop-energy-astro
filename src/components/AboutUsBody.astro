---
// src/components/AboutUsBody.astro - CLEANED FINAL VERSION

interface SectionData {
    mission: string;
    vision: string;
    coreValues: string[];
    mainContent: string;
}

interface Props {
    data: SectionData;
}

const { data } = Astro.props;
---

<section class="py-32 bg-white">
    <div class="container mx-auto px-6">
        
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-16 items-start mb-24">
            
            <div class="lg:col-span-2 rounded-xl overflow-hidden shadow-2xl border-4 border-gray-100 h-96">
                {/* --- UPDATED: Replaced placeholder DIV with Image tag using local path --- */}
                <img 
                    src="/images/Platform.png" 
                    alt="Hillcrop Energy Team or Facility"
                    class="w-full h-full object-cover"
                    onerror="this.onerror=null;this.src='/images/placeholder-about.jpg';"
                />
                {/* ---------------------------------------------------------------------- */}
            </div>

            <div class="lg:col-span-3 pt-6 lg:pt-0">
                <h3 class="text-4xl font-extrabold text-gray-900 mb-10 border-b-4 border-hillcrop-green pb-2 inline-block">
                    Who We Are
                </h3>
                <div class="prose prose-xl max-w-none text-gray-700 leading-relaxed prose-p:mb-8">
                    <div set:html={data.mainContent}></div>
                </div>
            </div>

        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-32">
            
            <div class="bg-hillcrop-cream p-12 rounded-xl shadow-lg border-t-4 border-hillcrop-green"> 
                <h3 class="text-3xl font-bold text-hillcrop-green-dark mb-4 flex items-center">
                    <svg class="w-8 h-8 mr-3 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 13h18M3 17h18M3 21h18M3 5h18"></path></svg>
                    Our Mission
                </h3>
                <p class="text-lg text-gray-700 leading-relaxed">{data.mission}</p>
            </div>

            <div class="bg-hillcrop-cream p-12 rounded-xl shadow-lg border-t-4 border-hillcrop-green"> 
                <h3 class="text-3xl font-bold text-hillcrop-green-dark mb-4 flex items-center">
                    <svg class="w-8 h-8 mr-3 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                    Our Vision
                </h3>
                <p class="text-lg text-gray-700 leading-relaxed">{data.vision}</p>
            </div>

            <div class="bg-gray-100 p-12 rounded-xl shadow-lg border-t-4 border-yellow-500 flex flex-col justify-center items-center text-center"> 
                <h3 class="text-3xl font-bold text-gray-900 mb-4">Core Values</h3>
                <p class="text-lg text-gray-700">The principles that guide our every operation.</p>
                <a href="#values-list" class="mt-4 inline-block text-yellow-600 font-semibold hover:text-yellow-700 transition">View Our Principles &rarr;</a>
            </div>

        </div>

        <div id="values-list" class="mt-32">
            <h3 class="text-4xl font-extrabold text-gray-900 text-center mb-16 border-b-4 border-yellow-500 pb-2 inline-block mx-auto">
                Commitment to Core Values
            </h3>
            
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 text-xl text-gray-700">
                {data.coreValues.map((value) => (
                    <li class="bg-white p-8 rounded-lg shadow-xl border-l-4 border-hillcrop-green flex items-start">
                        <svg class="w-8 h-8 mr-4 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.276a2.008 2.008 0 00-2.828 0l-7.425 7.425-1.414-1.414a2.008 2.008 0 00-2.828 2.828l1.414 1.414a2.008 2.008 0 002.828 0L19.618 7.544a2.008 2.008 0 000-2.828z"></path></svg>
                        <span class="font-semibold">{value}</span>
                    </li>
                ))}
            </ul>
        </div>

        <div class="mt-32 text-center py-16 px-12 bg-gray-100 rounded-xl shadow-2xl border-t-8 border-hillcrop-green max-w-5xl mx-auto">
            <h3 class="text-3xl font-bold text-gray-900 mb-6">Partner with a Trusted Name in Energy</h3>
            <p class="text-xl text-gray-700 mb-8">
                Learn how our commitment to excellence can drive the success of your next project.
            </p>
            <a href="/contact" class="inline-block px-10 py-4 bg-hillcrop-green text-white text-lg font-semibold rounded-full shadow-lg hover:bg-hillcrop-green-dark transition duration-300 transform hover:scale-105">
                Start a Conversation &rarr;
            </a>
        </div>
    </div>
</section>
