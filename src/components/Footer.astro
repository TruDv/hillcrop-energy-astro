---
// src/components/Footer.astro - Global Footer Component

const whatsappNumberClean = "2348030874890"; // Cleaned number for wa.me link

const contactDetails = {
    // Consolidated all phone numbers into an array
    phones: [
        "+234 803 0874 890",
        "+234 803 7652 493",
        "+234 803 7829 896",
        "+1 281 540 1866",
    ],
    // Consolidated all email addresses into an array
    emails: [
        "info@hillcropenergy.com",
        "enquiries@hillcropenergy.com",
        "hillcropenergyservices@gmail.com",
    ],
    // Consolidated all addresses into a list of objects
    addresses: [
        { name: "Lagos Office", details: "20 Mathew Street, Surulere, Lagos" },
        { 
            name: "Port Harcourt Offices", 
            details: "88 Peter Odili road, Trans Amadi Port Harcourt.<br/>Plot 1B, redemption Avenue, ENEKA link road, ENEKA Port Harcourt." 
        },
        { name: "US Office", details: "17721 Highway 59N, Suite B Humble Tx 77396, US" }
    ]
};

const quickLinks = [
    { title: "Home", href: "/" },
    { title: "About Us", href: "/about" },
    { title: "Services Overview", href: "/services" },
    { title: "Careers", href: "/career" },
    { title: "Contact Us", href: "/contact" },
];

// Reusing the services list for deep links in the footer
const services = [
    { title: "Marine Logistics", slug: "marine-logistics" },
    { title: "Technical Tools Procurement", slug: "technical-tools-procurement" },
    { title: "Safety Materials Supply", slug: "safety-materials-supply" },
    { title: "International Procurement", slug: "international-procurement" },
    { title: "Onshore / Support", slug: "onshore-support" },
    { title: "Marine Tools/Equipment Support", slug: "marine-tools-equipment-support" },
    { title: "General Contracts", slug: "general-contracts" },
];

const whatsappUrl = `https://wa.me/${whatsappNumberClean}?text=${encodeURIComponent("Hello HillCrop Energy, I would like to make an inquiry.")}`;
---

<footer class="bg-gray-900 text-gray-300">
    
    <div class="container mx-auto px-6 py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            
            <div>
                <h3 class="text-2xl font-bold text-white mb-6 border-b-2 border-yellow-500 pb-1 inline-block">HillCrop Energy</h3>
                <p class="text-sm leading-relaxed mb-4">
                    HillCrop Energy Services Limited is a dynamic energy company providing specialized Marine, Logistics, Procurement, and Onshore Support to the Nigerian oil and gas industry.
                </p>
                
            </div>
            
            <div>
                <h3 class="text-2xl font-bold text-white mb-6 border-b-2 border-hillcrop-green pb-1 inline-block">Quick Links</h3>
                <ul class="space-y-3">
                    {quickLinks.map(link => (
                        <li>
                            <a href={link.href} class="text-sm hover:text-yellow-500 transition duration-300 flex items-center">
                                <span class="mr-2 text-yellow-500 text-xs">&rarr;</span> {link.title}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
            
            <div>
                <h3 class="text-2xl font-bold text-white mb-6 border-b-2 border-hillcrop-green pb-1 inline-block">Core Services</h3>
                <ul class="space-y-3">
                    {services.map(service => (
                        <li>
                            <a href={`/services/${service.slug}`} class="text-sm hover:text-yellow-500 transition duration-300 flex items-center">
                                <span class="mr-2 text-yellow-500 text-xs">&bull;</span> {service.title}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
            
            <div>
                <h3 class="text-2xl font-bold text-white mb-6 border-b-2 border-yellow-500 pb-1 inline-block">Contact Us</h3>
                <div class="space-y-6">
                    
                    <!-- Phones List -->
                    <div>
                        <div class="flex items-start mb-2">
                            <svg class="w-5 h-5 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            <p class="text-sm font-semibold text-white">Phones</p>
                        </div>
                        <ul class="ml-8 space-y-1">
                            {contactDetails.phones.map(phone => (
                                <li>
                                    <!-- Using regex to clean the phone number for the tel: link -->
                                    <a href={`tel:${phone.replace(/[^\d+]/g, '')}`} class="text-sm hover:text-yellow-500">{phone}</a>
                                </li>
                            ))}
                        </ul>
                    </div>
                    
                    <!-- Emails List -->
                    <div>
                        <div class="flex items-start mb-2">
                            <svg class="w-5 h-5 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            <p class="text-sm font-semibold text-white">Email Inquiries</p>
                        </div>
                        <ul class="ml-8 space-y-1">
                            {contactDetails.emails.map(email => (
                                <li>
                                    <a href={`mailto:${email}`} class="text-sm hover:text-yellow-500">{email}</a>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Addresses List -->
                    {contactDetails.addresses.map(address => (
                        <div class="flex items-start mt-5">
                            <svg class="w-5 h-5 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            <div>
                                <p class="text-sm font-semibold text-white">{address.name}</p>
                                <!-- Using set:html to render the <br/> tag in the details string -->
                                <p class="text-sm text-gray-400" set:html={address.details} />
                            </div>
                        </div>
                    ))}
                    
                </div>
            </div>

        </div>
    </div>

    <div class="border-t border-gray-800 py-6">
        <div class="container mx-auto px-6 flex flex-col md:flex-row justify-between items-center text-sm">
            
            <div class="mb-4 md:mb-0 text-gray-500">
                Â© 2025 HillCrop Energy Services Limited, RC: 1273701. All Rights Reserved.
            </div>

            <div class="flex space-x-4">
                <!-- Social media icons (using Tailwind color utility for hover) -->
                <a href="#" class="text-gray-500 hover:text-hillcrop-green transition" aria-label="Facebook"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.564V12h3.046l-.491 2.987h-2.555v6.987A10.002 10.002 0 0022 12z"/></svg></a>
                <a href="#" class="text-gray-500 hover:text-hillcrop-green transition" aria-label="LinkedIn"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2C6.477 2 2 6.477 2 12c0 4.84 3.42 8.879 8 9.8V15h-2.5v-3H10V9.75c0-2.543 1.492-3.93 3.676-3.93 1.057 0 2.238.195 2.238.195V8.5h-1.26c-1.243 0-1.63.771-1.63 1.564V12h3.046l-.491 2.987h-2.555v6.813A10.002 10.002 0 0022 12C22 6.477 17.523 2 12 2z"/></svg></a>
                <a href="#" class="text-gray-500 hover:text-hillcrop-green transition" aria-label="Twitter"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M22 4.01a9.96 9.96 0 01-2.828.775 4.966 4.966 0 002.163-2.723c-.947.567-1.994.981-3.107 1.229A4.952 4.952 0 0012.012 6.03c-3.18 0-5.756 2.576-5.756 5.756 0 .45.038.893.111 1.32-.477-.024-.954-.08-1.42-.164a10.046 10.046 0 01-2.894-1.503 4.96 4.96 0 001.536 2.046c-.886-.028-1.717-.253-2.454-.64a4.928 4.928 0 001.99 4.887 4.945 4.945 0 01-1.354.18c.243.684.757 1.258 1.41 1.636a10.038 10.038 0 006.354 2.276 10.026 10.026 0 007.82-3.83 14.07 14.07 0 002.16-3.864c.24-.62.378-1.28.406-1.944a9.88 9.88 0 00.334-1.936z"/></svg></a>
                <a href="#" class="text-gray-500 hover:text-hillcrop-green transition" aria-label="Github"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.238 2.88 7.82 6.82 9.076a.75.75 0 00.18-.707V15.75h-2.25V12h2.25V9.432c0-2.31 1.408-3.578 3.555-3.578 1.014 0 1.954.202 2.215.289V8.25h-1.5c-1.104 0-1.32.523-1.32 1.29V12h2.52l-.4 3.75h-2.12v5.326a.75.75 0 00.18.707C19.12 19.82 22 16.238 22 12 22 6.477 17.523 2 12 2z" clip-rule="evenodd"/></svg></a>
            </div>
        </div>
    </div>
</footer>

<!-- FLOATING WHATSAPP BUTTON (with text) -->
<a 
    href={whatsappUrl} 
    target="_blank" 
    class="fixed bottom-6 right-6 z-50 bg-hillcrop-green text-white p-3 rounded-full shadow-2xl hover:bg-hillcrop-green-dark transition duration-300 transform hover:scale-105 flex items-center justify-center 
           md:justify-start md:p-3 md:pr-5 md:w-auto"
    aria-label="Chat Live on WhatsApp"
>
    <!-- Text: Hidden on mobile (default), visible on medium screens and up (md:inline) -->
    <span class="hidden md:inline text-base font-semibold mr-2 tracking-wide">
        Chat Live
    </span>
    <!-- WhatsApp Icon SVG: Always visible -->
    <svg class="w-6 h-6 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path d="M12.039 2C6.54 2 2.093 6.477 2.093 12C2.093 14.01 2.593 15.891 3.483 17.54L2.148 22.083L6.878 20.69C8.428 21.498 10.16 22 12.039 22C17.538 22 22 17.523 22 12C22 6.477 17.538 2 12.039 2ZM17.476 16.516C17.276 16.891 16.147 17.447 15.656 17.579C15.166 17.711 14.79 17.777 14.414 17.711C14.038 17.644 13.568 17.509 12.51 17.159C11.198 16.702 10.136 15.74 9.308 14.542C8.653 13.626 8.356 12.639 8.289 12.181C8.223 11.724 8.78 11.478 9.13 11.129C9.318 10.941 9.554 10.669 9.771 10.433C9.988 10.197 10.054 10.051 10.16 9.834C10.266 9.617 10.322 9.401 10.433 9.175C10.544 8.949 10.398 8.703 10.198 8.486C9.998 8.269 9.771 7.749 9.583 7.348C9.395 6.946 9.188 6.999 9.035 6.999C8.882 6.999 8.656 6.999 8.449 6.999C8.243 6.999 7.971 7.076 7.708 7.378C7.446 7.68 6.84 8.246 6.84 9.42C6.84 10.594 7.669 11.737 7.781 11.973C7.892 12.209 9.471 14.654 11.724 15.669C12.25 15.914 12.684 16.037 13.06 16.155C13.639 16.331 14.155 16.294 14.569 15.986C14.983 15.677 15.228 15.012 15.429 14.686C15.63 14.36 15.799 14.225 15.934 14.062C16.069 13.899 16.175 13.805 16.376 14.051C16.577 14.297 17.26 15.29 17.476 15.724C17.693 16.159 17.693 16.294 17.476 16.516Z"/>
    </svg>
</a>
