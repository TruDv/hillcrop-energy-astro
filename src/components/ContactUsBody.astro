---
// src/components/ContactUsBody.astro - FINAL PROFESSIONAL TWO-COLUMN DESIGN

const contactDetails = {
    address1: "#20 Mathew Street, Surulere, Lagos",
    address2: "#88 Peter Odili Road. Trans - Amadi, Port Harcourt",
    address3: "#17721 Highway 59N, Suite B Humble Tx 77396, US",
    phone: "+234 - 802 - 9375 - 443",
    email: "info@hillcropenergy.com",
};
---

<section class="py-24 bg-white">
    <div class="container mx-auto px-6">
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
            
            <div>
                <h2 class="text-4xl font-extrabold text-gray-900 mb-8 border-b-4 border-hillcrop-green pb-2 inline-block font-heading">
                    Get in Touch
                </h2>
                
                <p class="text-lg text-gray-700 mb-10 leading-relaxed max-w-lg">
                    We are available to discuss your project needs and operational requirements. Reach out to our dedicated teams in Lagos and Port Harcourt.
                </p>

                <div class="space-y-6">
                    
                    <div class="flex items-start p-4 bg-gray-50 rounded-lg shadow-sm border border-gray-100">
                        <svg class="w-6 h-6 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                        <div>
                            <p class="text-lg font-bold text-gray-900">Call Us</p> 
                            <a href={`tel:${contactDetails.phone.replace(/ /g, '').replace(/-/g, '')}`} class="text-base text-hillcrop-green hover:text-blue-800 transition">{contactDetails.phone}</a>
                        </div>
                    </div>
                    
                    <div class="flex items-start p-4 bg-gray-50 rounded-lg shadow-sm border border-gray-100">
                        <svg class="w-6 h-6 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        <div>
                            <p class="text-lg font-bold text-gray-900">Email Inquiries</p> 
                            <a href={`mailto:${contactDetails.email}`} class="text-base text-hillcrop-green hover:text-blue-800 transition">{contactDetails.email}</a>
                        </div>
                    </div>

                    <div class="flex items-start p-4 bg-gray-50 rounded-lg shadow-sm border border-gray-100">
                        <svg class="w-6 h-6 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <div>
                            <p class="text-lg font-bold text-gray-900">Lagos Office</p>
                            <p class="text-base text-gray-700">{contactDetails.address1}</p>
                        </div>
                    </div>

                    <div class="flex items-start p-4 bg-gray-50 rounded-lg shadow-sm border border-gray-100">
                        <svg class="w-6 h-6 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <div>
                            <p class="text-lg font-bold text-gray-900">Port Harcourt Office</p>
                            <p class="text-base text-gray-700">{contactDetails.address2}</p>
                        </div>
                    </div>
                    
                    
                    <div class="flex items-start p-4 bg-gray-50 rounded-lg shadow-sm border border-gray-100">
                        <svg class="w-6 h-6 mr-3 mt-1 text-hillcrop-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <div>
                            <p class="text-lg font-bold text-gray-900">US Office</p>
                            <p class="text-base text-gray-700">{contactDetails.address3}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <h3 class="text-4xl font-extrabold text-gray-900 mb-8 border-b-4 border-yellow-500 pb-2 inline-block font-heading">
                    Send a Message
                </h3>
                
                <!-- 
                    ACTION UPDATE: Set the form action to the Formspree endpoint.
                    USER NOTE: You must replace 'your_form_hash' with the unique hash Formspree gives you.
                -->
                <form action="https://formspree.io/f/xblpgpyd" method="POST" class="bg-gray-100 p-8 rounded-xl shadow-lg space-y-5 border border-gray-200"> 
                    
                    <div>
                        <label for="name" class="block text-base font-medium text-gray-700 mb-2">Full Name</label> 
                        <input type="text" name="name" id="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-hillcrop-green focus:border-hillcrop-green text-base shadow-sm"> 
                    </div>

                    <div>
                        <label for="email" class="block text-base font-medium text-gray-700 mb-2">Email Address</label>
                        <input type="email" name="email" id="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-hillcrop-green focus:border-hillcrop-green text-base shadow-sm">
                    </div>

                    <div>
                        <label for="service" class="block text-base font-medium text-gray-700 mb-2">Interested Service</label>
                        <select id="service" name="service" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-hillcrop-green focus:border-hillcrop-green text-base shadow-sm">
                            <option value="">-- Select a Service --</option>
                            <option value="Marine Logistics">Marine Logistics</option>
                            <option value="Technical Tools Procurement">Technical Tools Procurement</option>
                            <option value="Safety Materials Supply">Safety Materials Supply</option>
                            <option value="International Procurement">International Procurement</option>
                            <option value="Onshore / Support">Onshore / Support</option>
                            <option value="Marine Tools/Equipment Support">Marine Tools/Equipment Support</option>
                            <option value="General Contracts">General Contracts</option>
                            <option value="General Inquiry">General Inquiry</option>
                        </select>
                    </div>

                    <div>
                        <label for="message" class="block text-base font-medium text-gray-700 mb-2">Your Message</label>
                        <textarea name="message" id="message" rows="4" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-hillcrop-green focus:border-hillcrop-green text-base shadow-sm"></textarea>
                    </div>

                    <button type="submit" class="w-full px-8 py-3 bg-hillcrop-green text-white text-lg font-semibold rounded-lg shadow-md hover:bg-hillcrop-green-dark transition duration-300 transform hover:scale-[1.01]">
                        Submit Inquiry &rarr;
                    </button>
                </form>
            </div>
        </div>

        <!-- Hidden map placeholder for reference -->
        <!--
        <div class="mt-20">
            <h3 class="text-4xl font-extrabold text-gray-900 mb-8 text-center border-b-4 border-hillcrop-green pb-2 inline-block mx-auto">
                Our Office Locations
            </h3>
            <div class="bg-gray-100 rounded-xl overflow-hidden shadow-2xl h-[400px] border-4 border-gray-200">
                <div class="w-full h-full flex items-center justify-center text-gray-500">
                    <p class="text-xl">Map Placeholder (Requires API Key or Embed Code)</p>
                </div>
            </div>
        </div>
        -->

    </div>
</section>
