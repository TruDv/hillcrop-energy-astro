---
// src/components/DetailSection.astro - FINAL PROFESSIONAL DESIGN (RULE REMOVED)

interface DetailData {
    title: string;
    description: string;
    content: string; // The main introductory content (can include <p> tags)
    keyCapabilities: string[]; // List of capabilities for a bulleted section
    imageUrl?: string; 
    imageAlt?: string;
}

interface Props {
    data: DetailData;
}

const { data } = Astro.props;
---

<section class="bg-charcoal py-24 text-white">
    <div class="container mx-auto px-6 text-center">
        <h1 class="text-5xl font-extrabold mb-3">{data.title}</h1>
        <p class="text-xl text-gray-300 max-w-4xl mx-auto">{data.description}</p>
    </div>
</section>

<section class="py-32 bg-white"> <div class="container mx-auto px-6">
        
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-16 items-start mb-24">
            
            <div class="lg:col-span-2 rounded-xl overflow-hidden shadow-2xl border-4 border-gray-100">
                {data.imageUrl ? (
                    <img 
                        src={data.imageUrl} 
                        alt={data.imageAlt || `Image for ${data.title} service`} 
                        class="w-full h-96 object-cover"
                    />
                ) : (
                    <div class="bg-gray-100 h-96 w-full flex flex-col items-center justify-center text-gray-500 p-6">
                        <svg class="w-16 h-16 mb-2 text-hillcrop-green" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                        <p class="text-lg font-semibold text-center">Image Placeholder: {data.title}</p>
                    </div>
                )}
            </div>

            <div class="lg:col-span-3 pt-6 lg:pt-0">
                <h2 class="text-4xl font-extrabold text-gray-900 mb-12 border-b-4 border-hillcrop-green pb-2 inline-block">
                    Overview
                </h2>
                <div class="prose prose-xl max-w-none text-gray-700 leading-relaxed prose-p:mb-8">
                    <div set:html={data.content}></div>
                </div>
            </div>

        </div>
        
        <div class="mt-32"> <div class="bg-hillcrop-cream px-16 py-16 rounded-xl shadow-lg border-l-8 border-hillcrop-green"> <h3 class="text-3xl font-bold text-hillcrop-green-dark mb-12 flex items-center">
                    <svg class="w-8 h-8 mr-4 text-hillcrop-green" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                    Key Capabilities and Expertise
                </h3>
                
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-10 text-xl text-gray-700"> 
                    {data.keyCajpabilities.map((capability) => (
                        <li class="flex items-start">
                            <svg class="w-6 h-6 mr-3 mt-1 text-yellow-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                            <span class="leading-relaxed">{capability}</span>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
        
        <div class="mt-32 text-center py-16 px-12 bg-gray-100 rounded-xl shadow-2xl border-t-8 border-hillcrop-green max-w-5xl mx-auto"> <h3 class="text-3xl font-bold text-gray-900 mb-6">Ready to Discuss Your Project?</h3>
            <p class="text-xl text-gray-700 mb-8">
                Our specialists are available for a detailed consultation on your energy infrastructure needs.
            </p>
            <a href="/contact" class="inline-block px-10 py-4 bg-hillcrop-green text-white text-lg font-semibold rounded-full shadow-lg hover:bg-hillcrop-green-dark transition duration-300 transform hover:scale-105">
                Contact Our Experts Now &rarr;
            </a>
        </div>
        
        <div class="mt-20 text-center">
             <a href="/services" class="text-lg text-hillcrop-green font-semibold hover:text-blue-800 transition">
                &larr; Back to Services Overview
            </a>
        </div>
    </div>
</section>